/*Comments*/
/*-------------------------------------------------*/
.comments{
	clear:both;
}
.comments header{
	margin:2em 0 1.5em;
	padding-left: 1px;
}
.comments header .add-comment-link{
	margin-left:1em;
	font-size:0.875em;
}
.comments .comment{
	padding:0.5em 1em 0.2em 2.5em;
	background-color: #FFF;
	border-radius: 5px;
	margin:0 0 2em 1em;
	position: relative;
}
.comments .comment .text{
	margin-top: -0.813em;
}
.comments .comment .avatar{
	position: absolute;
	left:-0.813em;
	top:-0.813em;
}