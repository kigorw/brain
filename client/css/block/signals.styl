@import "../util/vendor";
@import "../util/links";

.signals {
	margin-top: 1.5em
    .info {
        padding-bottom: 1em;
        text-shadow: 0 1px 0 #fff;

        .title {
            font-size: 1.063em;
            line-height: 1.25em;
            font-weight: bold;
            margin-right: 0em


        }

        .data {
            padding: 0;
            line-height: 1.5em;
            display: inline-block;
                .comment-count{
                    color: #999;
                    background: #fff; /* Old browsers */
                    padding: 0.1em 0.4em;
                    border-radius: 2px;
                    border: 1px solid #ddd;
                    font-size: 0.688em;
                    vertical-align: 1px;
                }
        }
    }

    .read {
        .title {
            font-weight:normal;
        }
    }
}
.star-ico{
    color: #aaa;
    font-size: 0.875em;
    cursor: pointer;
}

.btn-remove {
    display:none;
    cursor:pointer;
    margin-left:10px;
    color:red;
    font-size:12px;
    &:hover {color:black;}
}

.signal_item:hover {
    .btn-remove {
        display:inline-block;
    }
}

.star-ico:hover{
    color: #777;
}
.star-ico:after{
    content: "☆";
}
.active-star-ico:after{
    content: "★";
    color: #BE9E1B;
}
