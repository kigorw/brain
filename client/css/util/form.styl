/*Controls*/
/*-------------------------------------------------*/
.title-f {
	width: 100%;
	font-size: 2em;
	line-height: 1.15em;
	font-weight: normal;
	padding: 5px 7px;
	margin-bottom: 1em;
	border: 1px solid #bbb;
}
.text-f {
	width: 100%;
	padding: 7px 9px;
	margin-bottom: 1.5em;
	border: 1px solid #bbb;
	min-height: 20em;
}
.normal-f {
	min-height: 10em;
}
button {
	border-radius: 3px;
	box-shadow: 0 1px 3px #bbb, 0 1px 1px #aaa ;
	border: none;
	font-size:1.325em;
	color: #fff;
	padding:7px 20px;
	text-shadow:0 1px 1px #3461a2;
	background: #6ca6f6;
	gradient(top,  #6ca6f6 1%,#3771bf 100%);
	margin-bottom: 1em;

    &:hover {
        background: #72aeff;
        gradient(top,  #72aeff 0%,#3670be 100%); 
    }
    &:active {
        box-shadow: 0 1px 0px #aaa;
        margin-top:1px;
    }
}
