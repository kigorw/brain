/*Controls*/
/*-------------------------------------------------*/
.title-f {
	width: 100%;
	font-size: 2em;
	line-height: 1.15em;
	font-weight: normal;
	padding: 5px 7px;
	margin-bottom: 1em;
	border: 1px solid #bbb;
}
.text-f {
	width: 100%;
	padding: 7px 9px;
	margin-bottom: 1.5em;
	border: 1px solid #bbb;
	min-height: 20em;
}
.normal-f {
	min-height: 10em;
}
button {
	border-radius: 3px;
	box-shadow: 0 1px 3px #bbb, 0 1px 1px #aaa ;
	border: none;
	font-size:1.325em;
	color: #fff;
	padding:7px 20px;
	text-shadow:0 1px 1px #3461a2;
	background: #6ca6f6;
	background: -webkit-gradient(linear, left top, left bottom, color-stop(1%,#6ca6f6), color-stop(100%,#3771bf)); 
	background: -o-linear-gradient(top,  #6ca6f6 1%,#3771bf 100%);
	background: -ms-linear-gradient(top,  #6ca6f6 1%,#3771bf 100%);
	background: linear-gradient(to bottom,  #6ca6f6 1%,#3771bf 100%);
	margin-bottom: 1em;
}
button:hover {
	background: #72aeff;
	background: -webkit-linear-gradient(top,  #72aeff 0%,#3670be 100%); 
	background: -o-linear-gradient(top,  #72aeff 0%,#3670be 100%);
	background: -ms-linear-gradient(top,  #72aeff 0%,#3670be 100%);
	background: linear-gradient(to bottom,  #72aeff 0%,#3670be 100%);
}
button:active {
	box-shadow: 0 1px 0px #aaa;
	margin-top:1px;
}
