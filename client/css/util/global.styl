/*Main*/
/*-------------------------------------------------*/
body{
	font: 16px/1.5 "PT Sans", "Helvetica", "Arial";
	background-color: #f0f0f0;
}
h1{
	font-size: 2em;
	line-height: 1.15em;
	font-weight: normal;
	margin: 0.875em 0 0 -1px;
}
h3{
	font-size: 1.125em;
	line-height: 1.5em;
	font-weight: bold;
	margin: 1em 0;
}
a {
	color: #454545;
	text-decoration: none;
	border-bottom: 1px solid #bbb;
}
a:hover{
	color: #111;
	text-decoration: none;
	border-bottom: 1px solid #999;
}
li{
	padding-bottom: 1em;
	list-style: none;
}
li:before{
	content: "â€”";
	margin: 0 0.25em 0 -1em;
}
p{
	padding-bottom: 1em;
}


/*Other*/
/*-------------------------------------------------*/
.inln{
	display: inline;
}
.pseudo{
	border-bottom:1px dotted;
	cursor:pointer;
}
.data .who, .data .he-she, .data .when{
	font-size: 0.75em;
	line-height: 1.25em;
	color: #b2b2b2;
}
.data .anchor{
	font-size: 1em;
	line-height: 1.25em;
	color: #b2b2b2;
	float: right;
}
.avatar{
	width: 40px;
	height: 40px;
	border-radius: 3px;
    background-size: 40px;
	box-shadow: 0 1px 1px #bbb;
	margin:2px 6px 0 0;
}


#login-buttons {
	display: inline;
	margin-left: 20px;
	position: absolute;
	.login-header {
		color:#DBDBDB;
	}
}
