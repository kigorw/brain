join-stops(stops)
  str = ''
  len = length(stops)
  for stop, i in stops
    str += ', ' if i
    str += stop
  unquote(str)


gradient(start, stops...) {
    stops = join-stops(stops)

    background: -webkit-linear-gradient(start, stops);
    background: -moz-linear-gradient(arguments);
    background: linear-gradient(arguments);
}
transform() {
  -webkit-transform:rotate(arguments);
  -moz-transform:rotate(arguments);
  -ms-transform:rotate(arguments);
  transform:rotate(arguments);
}

transition() {
  -webkit-transition:arguments
  -moz-transition:arguments
  transition:arguments  
}

box-shadow() { 
  -webkit-box-shadow: arguments;
  -moz-box-shadow: arguments;
  box-shadow: arguments;
}

border-radius() {
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments
}

no-select() {
    -webkit-user-select:none;
    -moz-user-select: none;
    user-select: none;
}
